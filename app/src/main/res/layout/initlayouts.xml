<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/woodland"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="432dp"
            android:layout_height="106dp"

            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"

            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="432dp"
                android:layout_height="90dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/tank_login" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="INIT-GAME"
            android:textColor="#D11818"
            android:textSize="30sp" />

        <Button
            android:id="@+id/backendMenu"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:text="BACK-TO-MENU" />

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="419dp"
            android:layout_height="580dp"
            android:layout_marginBottom="1dp"
            
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="189dp"
                android:layout_height="564dp"
                
                android:gravity="clip_horizontal|top"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="173dp"
                    android:layout_height="137dp"
                    android:background="@drawable/coustombroder2"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingTop="10dp"
                        app:srcCompat="@drawable/time" />

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:max="9" />

                    <TextView
                        android:id="@+id/txtMin"
                        android:layout_width="152dp"
                        android:layout_height="37dp"
                        android:gravity="center"
                        android:text="1 Min"
                        android:textColor="@color/design_default_color_on_primary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="173dp"
                    android:layout_height="137dp"
                    android:background="@drawable/customborder4"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingTop="10dp"

                        app:srcCompat="@drawable/ammo2" />

                    <SeekBar
                        android:id="@+id/seekBar2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                    <TextView
                        android:id="@+id/txtShots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="173dp"
                    android:layout_height="137dp"
                    android:background="@drawable/customborder6"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:padding="10dp"
                        android:paddingBottom="20dp"
                        app:srcCompat="@drawable/mine" />

                    <SeekBar
                        android:id="@+id/seekBarMines"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:max="2" />

                    <TextView
                        android:id="@+id/txtInitMines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Mines"
                        android:textColor="#FFFFFF" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="206dp"
                android:layout_height="562dp"
                
                android:gravity="clip_vertical|top"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="173dp"
                    android:layout_height="137dp"
                    android:background="@drawable/custombroder3"
                    android:orientation="vertical"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingTop="20dp"
                        app:srcCompat="@drawable/level" />

                    <SeekBar
                        android:id="@+id/seekBar3"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:max="2"
                        android:progress="3" />

                    <TextView
                        android:id="@+id/txtLevel"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:gravity="center"
                        android:text="CAPTURE-THE-FLAG"
                        android:textColor="@color/design_default_color_on_primary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="173dp"
                    android:layout_height="137dp"
                    android:background="@drawable/customborder5"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingTop="10dp"
                        app:srcCompat="@drawable/keys" />

                    <SeekBar
                        android:id="@+id/seekBarKeys"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:max="2" />

                    <TextView
                        android:id="@+id/txtInitKeys"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="keys:"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="173dp"
                    android:layout_height="137dp"

                    android:orientation="vertical">

                    <Button
                        android:id="@+id/sendData"
                        android:layout_width="173dp"
                        android:layout_height="137dp"
                        android:background="@drawable/customborder"
                        android:paddingRight="10dp"
                        android:paddingBottom="20dp"
                        android:text="START-GAME"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>