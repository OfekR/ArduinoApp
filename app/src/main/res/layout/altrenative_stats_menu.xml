<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="#2876C5"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageStats"
                android:layout_width="423dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/noob" />

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtusername1"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:text="TextView"
                    android:textColor="#D8AB24" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="134dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="ACCURACY:"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBar5"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:max="100" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="match_parent"

                    android:layout_height="40dp"
                    android:numStars="3"
                    android:rating="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#2876C5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btMystats"

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:paddingRight="20dp"
                android:text="MY-STATS" />


            <Button
                android:id="@+id/btTopScore"
                android:layout_width="200dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:paddingLeft="20dp"
                android:text="TOP-5-SCORE" />


        </LinearLayout>
    </HorizontalScrollView>


    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="299dp"
        android:background="#2876C5"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </ListView>

    <Button
        android:id="@+id/backTomenu"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:background="#13324A"
        android:text="BACK-TO-MENU"
        android:textColor="#FFFFFF" />


</LinearLayout>
