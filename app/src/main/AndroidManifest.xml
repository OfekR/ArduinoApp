<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arduino">

    <uses-feature android:name="android.hardware.bluetooth"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Shoots and Barrieruino"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".gameScreen.PopWindowWin"></activity>
        <activity android:name=".gameScreen.PopWindowGameOver" />
        <activity android:name=".loby.PopWindow" />
        <activity android:name=".gameScreen.GameScreenActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".stats.StatitacsActivity" />
        <activity android:name=".initGame.InitGameActivity" />
        <activity android:name=".loby.LobyActivity" />
        <activity
            android:name=".menu.MenuActivity"
            android:label="Shoots And Barrieruino">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>